<script>
// تحديث العداد
function updateRelationshipTimer(){
    const startDate = new Date("2023-04-06T00:00:00");
    const now = new Date();
    let diff = now - startDate;

    const seconds = Math.floor(diff / 1000 % 60);
    const minutes = Math.floor(diff / (1000*60) % 60);
    const hours = Math.floor(diff / (1000*60*60) % 24);
    const daysTotal = Math.floor(diff / (1000*60*60*24));

    const years = Math.floor(daysTotal/365);
    const months = Math.floor((daysTotal % 365)/30);
    const days = (daysTotal % 365) % 30;

    document.getElementById("yearsBox").innerHTML = `${years}<span>سنين</span>`;
    document.getElementById("monthsBox").innerHTML = `${months}<span>شهور</span>`;
    document.getElementById("daysBox").innerHTML = `${days}<span>أيام</span>`;
    document.getElementById("hoursBox").innerHTML = `${hours}<span>ساعات</span>`;
    document.getElementById("minutesBox").innerHTML = `${minutes}<span>دقائق</span>`;
    document.getElementById("secondsBox").innerHTML = `${seconds}<span>ثواني</span>`;
}
setInterval(updateRelationshipTimer,1000);
updateRelationshipTimer();

// عناصر الصفحة
let omrumBtn = document.getElementById("omrumBtn");
let music = document.getElementById("music");
let messages = document.querySelectorAll(".message");

let passwordScreen = document.getElementById("passwordScreen");
let passInput = document.getElementById("passInput");
let passBtn = document.getElementById("passBtn");
let passMsg = document.getElementById("passMsg");
let mainContent = document.getElementById("mainContent");

// زر كلمة السر
passBtn.addEventListener("click", ()=>{
    if(passInput.value === "A654G"){
        passwordScreen.style.display = "none";
        mainContent.style.display = "block";
    }else{
        passMsg.textContent = "كلمة السر خاطئة!";
        passInput.value = "";
    }
});

// زر Ömrüm → تشغيل الأغنية وظهور الرسائل تدريجياً
omrumBtn.addEventListener("click",()=>{
    music.play();
    messages.forEach((msg,index)=>{
        setTimeout(()=>{
            msg.style.opacity="1";
        }, index * 5000);
    });
    omrumBtn.style.display="none";
});
</script>

